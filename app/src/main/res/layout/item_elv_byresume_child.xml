<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rel_byresume_item"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/tv_byresume_namechild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="已下载简历"
            android:textColor="#333333"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_byresume_numchild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_byresume_namechild"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="10"
            android:textColor="#333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_byresume_namechild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/jiantou_right" />
    </RelativeLayout>
    <View
        android:id="@+id/view_byresume_item"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rel_byresume_item"
        android:background="#f6f6f6"
        android:visibility="gone" />
</RelativeLayout>
