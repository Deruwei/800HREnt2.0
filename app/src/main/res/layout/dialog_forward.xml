<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/linear_yuanhu_bghui"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="270dp"
        android:gravity="center"
        android:text="转发"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            style="@style/dialog_textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forward_to" />

        <EditText
            android:id="@+id/edit_email"
            style="@style/dialog_edit_textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/forward_hint" />

        <TextView
            style="@style/dialog_textstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/recently_email" />

        <LinearLayout
            android:id="@+id/recently_emails_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <include
            android:id="@+id/ok_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            layout="@layout/dialog_ok" />
    </LinearLayout>

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>