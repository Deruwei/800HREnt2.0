<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:background="#fff">

     <FrameLayout
        android:id="@+id/framLayout_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearlayout_main_tab">
     </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearlayout_main_tab"
        android:background="#EBEBEB" />

    <LinearLayout
        android:id="@+id/linearlayout_main_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#FEFEFE"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_main_resume"
            style="@style/linear_main_tab">

            <ImageView
                android:id="@+id/iv_main_resume"
                style="@style/linear_main_tab_iv"
                android:src="@mipmap/jianliguanli2" />

            <TextView
                android:id="@+id/tv_main_resume"
                style="@style/linear_main_tab_tv"
                android:text="简历管理" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_main_home"
            style="@style/linear_main_tab">

            <ImageView
                android:id="@+id/iv_main_home"
                style="@style/linear_main_tab_iv"
                android:src="@mipmap/home2" />

            <TextView
                android:id="@+id/tv_main_home"
                style="@style/linear_main_tab_tv"
                android:text="HOME" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_main_job"
            style="@style/linear_main_tab">

            <ImageView
                android:id="@+id/iv_main_job"
                style="@style/linear_main_tab_iv"
                android:src="@mipmap/zhiweiguanli2" />

            <TextView
                android:id="@+id/tv_main_job"
                style="@style/linear_main_tab_tv"
                android:text="职位管理" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>