<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="#f6f6f6"
    tools:context="com.hr.ent.ui.InviteParticularActivity">

    <RelativeLayout
        android:id="@+id/rl_contact_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F39800">
        <ImageView
            android:id="@+id/iv_inviteparticular_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topfanhui" />
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_inviteparticular_email"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_banyuan_left1"
                android:gravity="center"
                android:padding="5dp"
                android:text="邮件内容"
                android:textColor="#F39D0D"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/tv_inviteparticular_message"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_banyuan_right2"
                android:gravity="center"
                android:padding="5dp"
                android:text="短信内容"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_inviteparticular_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="简历"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_margin="12dp"
        android:id="@+id/vp_inviteparticular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"></android.support.v4.view.ViewPager>
</LinearLayout>
