<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e0000000"
    android:gravity="center"
    >
    <RelativeLayout
        android:background="@drawable/linear_yuanhu_bghui"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_inviteTitle"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="邀请"
        android:textColor="#333333"
        android:textSize="20sp" />

    <ScrollView
        android:layout_below="@+id/tv_inviteTitle"
        android:layout_above="@+id/rl_okLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/dialog_textstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/send_msg_way" />

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/send_email"
                    style="@style/dialog_textstyle"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/invite_email_btn"
                    android:paddingEnd="2dp"
                    android:paddingLeft="45dp"
                    android:paddingRight="2dp"
                    android:paddingStart="45dp"
                    android:text="@string/send_email" />

                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/send_msg"
                    style="@style/dialog_textstyle"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/invite_msg_btn"
                    android:paddingEnd="2dp"
                    android:paddingLeft="45dp"
                    android:paddingRight="2dp"
                    android:paddingStart="45dp"
                    android:text="@string/send_msg" />
            </LinearLayout>

            <TextView
                style="@style/dialog_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/select_moban" />

            <TextView
                android:padding="10dp"
                android:id="@+id/moban_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/call_shape"
                android:drawableRight="@drawable/invite_moban_btn"
                android:gravity="center_vertical"
                android:minWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                style="@style/dialog_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/reserve_time" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/reserve_date"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/call_shape"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />

                <TextView
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/day" />

                <TextView
                    android:id="@+id/reserve_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:background="@drawable/call_shape"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />

                <TextView
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/hour" />

                <TextView
                    android:id="@+id/reserve_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:background="@drawable/call_shape"
                    android:gravity="center"
                    android:minWidth="40dp"
                    android:textColor="@color/black_light"
                    android:textSize="16sp" />

                <TextView
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/minute"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/email_theme" />

                <EditText
                    android:padding="10dp"
                    android:id="@+id/email_title"
                    android:background="@drawable/call_shape"
                    style="@style/dialog_edit_textstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/email_label_content"
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginTop="5dp"
                    android:text="@string/email_content" />

                <EditText
                    android:padding="10dp"
                    android:id="@+id/email_content"
                    style="@style/dialog_edit_textstyle"
                    android:background="@drawable/call_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:minHeight="50dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/dialog_textstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/reply_email" />

                <EditText
                    android:padding="10dp"
                    android:id="@+id/reply_email"
                    style="@style/dialog_edit_textstyle"
                    android:background="@drawable/call_shape"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_okLayout"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <include
            android:id="@+id/ok_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            layout="@layout/dialog_ok" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>