<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.hr.ent.ui.IntentionCommunicationActivity">

    <RelativeLayout
        android:id="@+id/rl_intention_comm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F39800">

        <ImageView
            android:id="@+id/tv_intention_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topfanhui" />

        <TextView
            android:id="@+id/tv_intention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="意向沟通记录"
            android:textColor="#fff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_intention_filtrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="筛选"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_intention_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂无记录"
        android:visibility="gone" />

    <com.hr.ent.view.LoadMoreListView
        android:id="@+id/lv_intention"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:divider="#f6f6f6"
        android:dividerHeight="10dp"
        android:listSelector="#00000000"
        android:scrollbars="none" />
</LinearLayout>
