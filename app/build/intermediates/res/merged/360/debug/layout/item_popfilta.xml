<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:orientation="vertical">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_popfilter_0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_popfilter_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="沟通中"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/iv_popfilter_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_popfilter_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popfilter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="无效"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popfilter_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="108dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_popfilter_2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popfilter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="无"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popfilter_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_popfilter_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_popfilter_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="低"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popfilter_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_popfilter_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="中"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popfilter_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_popfilter_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_popfilter_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="高"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_popfilter_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:src="@mipmap/duihao"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>